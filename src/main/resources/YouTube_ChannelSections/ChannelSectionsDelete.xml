<template name="ChannelSectionsDelete" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="id" description="the id property specifies the section's ID."/>

    <sequence>
        <property name="uri.var.id" expression="$func:id"/>

        <call>
            <endpoint>
                <http method="DELETE"
                      uri-template="{uri.var.apiUrl}/channelSections?id={uri.var.id}"/>
            </endpoint>
        </call>

    </sequence>
</template>